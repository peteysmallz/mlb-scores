@require '../common.styl'

md-content
  background-color: #F7F7F7
  
.scoreboard
  position: relative
  display: inline-block

.final-score
  position: relative
  margin-bottom: 20px
  
  table.scorecard
    width: 100%
    background: none
    background-image: none
    border: 0
    border-collapse: collapse
    border-spacing: 0
    margin: 0
    padding: 0
    text-align: center
    
    thead
      font-size: 12px
      font-weight: 400
          
    tr
      border-bottom: 1px solid #ccc;  
        
      td.total
        border-right: 1px solid #ccc; 
      
      td.score    
        &:last-child
          border-left: 1px solid #ccc; 
          
      &:hover
        background: #e8e8e8
      
    th
    td
      font-size: 12px
      font-weight: 400
      
      &:first-child
        text-align: left
        padding-top: 6px
        padding-left: 10px
        
    th
      padding: 2px 0
      border-bottom: $border
      text-transform: uppercase
      font-weight: bold
      
    img
      width: 40px
      display: inline-block
      
    .total
    .score
      font-size: 24px
      width: 40px
      padding: 0 8px
      font-weight: 300
  
    .arrow
      position: relative
      &:last-child
        
        &:after
          content:""
          position: absolute
          right: 0px
          top: 20px
          vertical-align: middle
          border-top: 6px solid transparent
          border-bottom: 6px solid transparent
          border-right:6px solid #212121
      
    .image-container
    .team-meta
      display: inline-block
      
    .team-meta
      position: relative
      top: 20%
      transform: translateY(-20%)
      
      span
        display: block
        
    .team-name
      font-size: 14px
      font-weight: bold
      
    .record
    .probable-pitcher
      display: block
      border: none
      
    .record
      color: $lightTextColor
      font-size: 10px
      line-height: 1
      
    .live
      color: $highlightColor
        
  .light
    color: $lightTextColor
    
  .left
    text-align: left

  .right
    text-align: right

.on-base
  position: relative
  float: left;
  height: 35px;
  margin-bottom: 20px;
  width: 45px;
    
  .diamond
    position: absolute;
    content: '';
    height: 0;
    width: 0;
    border-color: transparent;
    border-style: solid;
    border-width: 10px;
    top: 10px;
    
    &.first-base
      float: right;
      right: 0
    
    &.second-base
      position: relative
      margin: 0 auto;
      top: -2px !important;
      
    &.third-base
      float: left;
      left: 0;
      
    &:after
      border-style: solid;
      border-color: #ccc;
      content: '';
      width: 0;
      height: 0;
      position: absolute;
      border-width: 5px;
      left: -5px;
      top: 0px;
      transform: rotate(45deg);
      
    &.onBase

      &:after
        border-color: $highlightColor

.balls-strikes-container
  position: relative
  display: inline-block
  padding: 0 15px
      
  .balls
  .strikes
    position: relative
    display: block
    line-height: 1.4
    
    .circle
      display: inline-block
      position: relative
      width: 10px;
      height: 10px;
      background-color: #ccc;
      border-radius: 5px;
        
      &.strike
      &.ball
        background-color: $highlightColor
    
        
        